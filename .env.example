# X (Twitter) API Credentials
# Get these from https://developer.x.com/en/portal/dashboard
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here

# iMessage Configuration
# The phone number or email of the contact to monitor
# Format: +1234567890 or email@example.com
IMESSAGE_CONTACT=+1234567890

# Polling Configuration (optional)
# How often to check for new messages in milliseconds (default: 3000)
POLL_INTERVAL=3000

# Tweet Configuration (optional)
# Maximum tweet length (default: 280)
MAX_TWEET_LENGTH=280
